{
	"name": "Puyopuyo Controller",
	"description": "puyop.comのとこぷよをコントローラで遊ぶために作りました。",
	"manifest_version": 3,
	"version": "1.0",
	"permissions": [
        "storage",
        "tabs",
        "activeTab", 
        "background"
    ],
	"content_scripts": [
        {
         	"js": ["js/controller-connection.js"],
			"css": ["css/puyop.css"],
			"matches": ["http://www.puyop.com/s/", "http://www.puyop.com/sim/"]
		}
    ]
}
